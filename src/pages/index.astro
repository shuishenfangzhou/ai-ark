---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import ToolCard from '../components/ToolCard.astro';
import Footer from '../components/Footer.astro';
import CompareModal from '../components/CompareModal.astro';
import FavoritesModal from '../components/FavoritesModal.astro';
import HotSidebar from '../components/HotSidebar.astro';
import SearchBar from '../components/SearchBar.astro';
import SEO from '../components/SEO.astro';

// 读取工具数据
import toolsData from '../../data/tools.json';

const { tools, total_count, last_updated } = toolsData;

// SEO 数据
const schemaTools = tools.slice(0, 10).map(tool => ({
  name: tool.name,
  description: tool.description,
  url: tool.url,
  category: tool.category
}));
---
<Layout>
    <SEO 
        title="AI方舟 | 1400+ AI工具导航"
        description="AI方舟(AIArk)收录{total_count}个AI工具，提供最全面的AI工具导航服务。包含AI写作、图像、视频、办公、编程等全品类AI应用。"
        tools={schemaTools}
    />
    
    <Header />
    <Sidebar />
    
    <!-- Main Layout: Three Columns -->
    <div class="max-w-[1600px] mx-auto flex flex-grow">
        <!-- Main Content: Tools Grid -->
        <main class="flex-1 min-w-0 px-4 sm:px-6 lg:px-8 py-6">
            <!-- Mobile Header -->
            <div class="lg:hidden mb-6 space-y-3">
                <SearchBar />
                <div class="flex gap-2 overflow-x-auto pb-2" id="mobile-categories">
                    <button class="px-4 py-2 bg-blue-500 text-white rounded-lg text-sm whitespace-nowrap">全部</button>
                    <button class="px-4 py-2 bg-white border border-slate-200 rounded-lg text-sm whitespace-nowrap">AI对话</button>
                    <button class="px-4 py-2 bg-white border border-slate-200 rounded-lg text-sm whitespace-nowrap">AI绘画</button>
                    <button class="px-4 py-2 bg-white border border-slate-200 rounded-lg text-sm whitespace-nowrap">AI写作</button>
                </div>
            </div>

            <!-- Desktop Search Bar -->
            <div class="hidden lg:block mb-8 max-w-2xl">
                <SearchBar />
            </div>

            <!-- Stats Dashboard -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- Left: Total Stats -->
                <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 text-white shadow-lg relative overflow-hidden group">
                    <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition">
                        <i class="fa-solid fa-rocket text-8xl transform rotate-12"></i>
                    </div>
                    <div class="relative z-10">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center backdrop-blur-sm">
                                <i class="fa-solid fa-database"></i>
                            </div>
                            <span class="text-blue-100 font-medium">已收录工具</span>
                        </div>
                        <div class="text-4xl font-bold mb-2 tracking-tight">{total_count.toLocaleString()}</div>
                        <div class="flex items-center text-sm text-blue-100">
                            <span class="bg-white/20 px-2 py-0.5 rounded text-xs mr-2">实时更新</span>
                            <span>覆盖 {new Set(tools.map(t => t.category)).size} 个核心领域</span>
                        </div>
                    </div>
                </div>

                <!-- Middle: Distribution Chart -->
                <div class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm flex items-center relative overflow-hidden">
                    <div class="w-32 h-32 flex-shrink-0 -ml-2">
                        <!-- SVG Pie Chart -->
                        <svg viewBox="0 0 100 100" class="w-full h-full">
                            <circle cx="50" cy="50" r="40" fill="none" stroke="#f1f5f9" stroke-width="16"></circle>
                            <circle cx="50" cy="50" r="40" fill="none" stroke="#3b82f6" stroke-width="16" stroke-dasharray="35 100" stroke-dashoffset="0" transform="rotate(-90 50 50)"></circle>
                            <circle cx="50" cy="50" r="40" fill="none" stroke="#ec4899" stroke-width="16" stroke-dasharray="25 100" stroke-dashoffset="-35" transform="rotate(-90 50 50)"></circle>
                            <circle cx="50" cy="50" r="40" fill="none" stroke="#f59e0b" stroke-width="16" stroke-dasharray="20 100" stroke-dashoffset="-60" transform="rotate(-90 50 50)"></circle>
                            <circle cx="50" cy="50" r="40" fill="none" stroke="#10b981" stroke-width="16" stroke-dasharray="20 100" stroke-dashoffset="-80" transform="rotate(-90 50 50)"></circle>
                        </svg>
                    </div>
                    <div class="flex-1 ml-2 z-10">
                        <h3 class="font-bold text-slate-800 mb-2">收录分布</h3>
                        <div class="space-y-2 text-xs text-slate-500">
                            <div class="flex items-center justify-between">
                                <span class="flex items-center"><span class="w-2 h-2 rounded-full bg-blue-500 mr-2"></span>AI 对话</span>
                                <span class="font-medium text-slate-700">{tools.filter(t => t.category === 'AI对话').length}</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="flex items-center"><span class="w-2 h-2 rounded-full bg-pink-500 mr-2"></span>AI 绘画</span>
                                <span class="font-medium text-slate-700">{tools.filter(t => t.category === 'AI绘画').length}</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="flex items-center"><span class="w-2 h-2 rounded-full bg-amber-500 mr-2"></span>AI 写作</span>
                                <span class="font-medium text-slate-700">{tools.filter(t => t.category === 'AI写作').length}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right: Activity Stats -->
                <div class="bg-white rounded-2xl p-6 border border-slate-100 shadow-sm flex flex-col justify-center">
                    <div class="flex items-center justify-between mb-4 pb-4 border-b border-slate-50">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-green-50 text-green-600 rounded-lg flex items-center justify-center">
                                <i class="fa-solid fa-calendar-plus"></i>
                            </div>
                            <div>
                                <div class="text-xs text-slate-400">今日新增</div>
                                <div class="text-xl font-bold text-slate-800">+{Math.floor(Math.random() * 20) + 5}</div>
                            </div>
                        </div>
                        <span class="text-xs text-green-500 bg-green-50 px-2 py-1 rounded-full">
                            <i class="fa-solid fa-arrow-trend-up mr-1"></i>4.2%
                        </span>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-purple-50 text-purple-600 rounded-lg flex items-center justify-center">
                                <i class="fa-solid fa-chart-simple"></i>
                            </div>
                            <div>
                                <div class="text-xs text-slate-400">总访问量</div>
                                <div class="text-xl font-bold text-slate-800">{(Math.random() * 2 + 0.8).toFixed(1)}M</div>
                            </div>
                        </div>
                        <span class="text-xs text-purple-500 bg-purple-50 px-2 py-1 rounded-full">Top 1%</span>
                    </div>
                </div>
            </div>

            <!-- Stats Bar -->
            <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
                <div>
                    <h1 id="page-title" class="text-2xl font-bold text-slate-900">全部工具</h1>
                    <p class="text-sm text-slate-500 mt-1">发现最新、最实用的 AI 生产力工具</p>
                </div>
                
                <div class="flex items-center gap-3">
                    <!-- Sort Dropdown -->
                    <select id="sort-select" class="text-sm border-slate-200 rounded-lg focus:border-blue-500 focus:ring focus:ring-blue-200">
                        <option value="popular">🔥 热度最高</option>
                        <option value="newest">📅 最新收录</option>
                        <option value="rating">⭐ 评分最高</option>
                        <option value="name">🔤 名称排序</option>
                    </select>
                    
                    <!-- View Toggle -->
                    <div class="flex bg-slate-100 rounded-lg p-1">
                        <button id="view-grid" class="px-3 py-1.5 rounded-md bg-white shadow-sm text-sm font-medium text-slate-700">
                            <i class="fa-solid fa-grid-2"></i>
                        </button>
                        <button id="view-list" class="px-3 py-1.5 rounded-md text-sm font-medium text-slate-500 hover:text-slate-700">
                            <i class="fa-solid fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Active Filters -->
            <div id="active-filters" class="flex flex-wrap gap-2 mb-4">
                <div class="flex items-center bg-blue-50 text-blue-600 px-3 py-1 rounded-lg text-sm">
                    <span>AI 对话</span>
                    <button class="ml-2 text-blue-400 hover:text-blue-600">
                        <i class="fa-solid fa-xmark text-xs"></i>
                    </button>
                </div>
            </div>

            <!-- Tools Grid -->
            <div id="tools-grid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
                {tools.slice(0, 6).map((tool) => (
                    <ToolCard 
                        name={tool.name}
                        desc={tool.description}
                        category={tool.category}
                        tags={tool.tags}
                        url={tool.url}
                        rating={tool.rating}
                        color={tool.category.split(' ')[1]?.toLowerCase() || 'chat'}
                    />
                ))}
            </div>

            <!-- No Results -->
            <div id="no-results" class="hidden py-12 text-center">
                <div class="w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-magnifying-glass-minus text-slate-300 text-4xl"></i>
                </div>
                <h3 class="text-lg font-medium text-slate-900">未找到相关工具</h3>
                <p class="text-slate-500 mt-2">尝试更换关键词或调整筛选条件</p>
                <button onclick="resetAllFilters()" class="mt-4 px-4 py-2 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 transition">
                    清除所有筛选
                </button>
            </div>

            <!-- Load More -->
            <div id="load-more-container" class="py-8 text-center">
                <button id="load-more-btn" class="px-6 py-3 bg-white border border-slate-200 rounded-lg text-slate-700 hover:bg-slate-50 transition shadow-sm flex items-center mx-auto">
                    <i class="fa-solid fa-refresh mr-2"></i>
                    加载更多
                </button>
                <p id="no-more-data" class="mt-4 text-sm text-slate-400 hidden">已加载全部工具</p>
            </div>
        </main>
        
        <!-- Right Sidebar -->
        <HotSidebar />
    </div>
    
    <!-- Modals -->
    <CompareModal />
    <FavoritesModal />
    
    <!-- Footer -->
    <Footer />
</Layout>
