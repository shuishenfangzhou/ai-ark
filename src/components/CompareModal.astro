---
// src/components/CompareModal.astro
---
<!-- Compare Modal -->
<div id="compare-modal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
        <div class="fixed inset-0 bg-black/50 transition-opacity" aria-hidden="true"></div>
        <div class="inline-block w-full max-w-4xl p-6 my-8 overflow-hidden text-left align-middle transition-all transform bg-white rounded-2xl shadow-xl">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-bold text-slate-900">AI工具对比</h3>
                <button id="close-compare-modal" class="text-slate-400 hover:text-slate-600">
                    <i class="fa-solid fa-xmark text-xl"></i>
                </button>
            </div>
            
            <div id="compare-empty-state" class="py-12 text-center">
                <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-scale-balanced text-slate-300 text-3xl"></i>
                </div>
                <h4 class="font-medium text-slate-900 mb-2">未选择对比工具</h4>
                <p class="text-slate-500 text-sm">请在工具卡片中勾选需要对比的AI工具</p>
            </div>
            
            <div id="compare-content" class="hidden">
                <div class="grid grid-cols-2 gap-6 mb-6">
                    <div class="border border-slate-200 rounded-xl p-4">
                        <h4 class="font-bold text-slate-900 mb-2">ChatGPT</h4>
                        <div class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="text-slate-500">价格</span>
                                <span class="text-slate-800 font-medium">免费/付费</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-slate-500">中文支持</span>
                                <span class="text-green-600">✅ 支持</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-slate-500">核心功能</span>
                                <span class="text-slate-800">对话、创作、编程</span>
                            </div>
                        </div>
                    </div>
                    <div class="border border-slate-200 rounded-xl p-4">
                        <h4 class="font-bold text-slate-900 mb-2">Claude 3</h4>
                        <div class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="text-slate-500">价格</span>
                                <span class="text-slate-800 font-medium">免费/付费</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-slate-500">中文支持</span>
                                <span class="text-green-600">✅ 支持</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-slate-500">核心功能</span>
                                <span class="text-slate-800">长文本、多模态、安全</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="flex justify-end gap-3">
                    <button id="clear-compare" class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition text-sm">
                        清空选择
                    </button>
                    <button id="export-compare" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition text-sm">
                        导出对比结果
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
