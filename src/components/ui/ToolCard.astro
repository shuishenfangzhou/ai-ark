---
// 组件Props（后续对接第二阶段TypeScript Schema）
interface Props {
  name: string;
  description: string;
  tags: string[];
  url: string;
  logo?: string;
}

const { name, description, tags, url, logo } = Astro.props;
---
<a
  href={url}
  target="_blank"
  class="block rounded-lg border border-gray-200 p-4 hover:shadow-lg transition-shadow"
>
  <div class="flex items-center gap-3 mb-2">
    <!-- Logo占位（后续替换为真实图片） -->
    {logo ? (
      <img src={logo} alt={name} class="w-8 h-8 rounded" />
    ) : (
      <div class="w-8 h-8 rounded bg-primary/10 flex items-center justify-center text-primary">
        {name.slice(0, 1)}
      </div>
    )}
    <h3 class="font-medium text-lg">{name}</h3>
  </div>
  <p class="text-sm text-secondary mb-3">{description}</p>
  <div class="flex flex-wrap gap-2">
    {tags.map((tag) => (
      <span class="text-xs px-2 py-1 bg-gray-100 rounded-full">{tag}</span>
    ))}
  </div>
</a>
