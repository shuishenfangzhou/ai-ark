---
// 分类数据（后续对接第二阶段数据）
const categories = [
  "AI写作",
  "AI绘画",
  "AI开发",
  "AI办公",
];
---
<aside class="w-64 border-r border-gray-200 p-4 h-screen sticky top-0">
  <h2 class="font-bold text-lg mb-4">工具分类</h2>
  <ul class="space-y-2">
    {categories.map((category) => (
      <li>
        <a
          href={`#${category}`}
          class="block px-3 py-2 rounded hover:bg-primary/10 hover:text-primary transition-colors"
        >
          {category}
        </a>
      </li>
    ))}
  </ul>
</aside>
